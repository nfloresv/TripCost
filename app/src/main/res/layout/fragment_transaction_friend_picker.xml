<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="cl.flores.nicolas.tripcost.dialogs.TransactionFriendPickerFragment">


  <TextView
      android:id="@+id/transaction_friend_picker_friend_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:labelFor="@+id/transaction_friend_picker_friend_spinner"
      android:text="@string/pick_transaction_friend_dialog_friend_spinner"
      android:textAppearance="?android:attr/textAppearanceLarge"/>

  <Spinner
      android:id="@+id/transaction_friend_picker_friend_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="@dimen/text_margin"
      android:layout_toEndOf="@+id/transaction_friend_picker_friend_tv"
      android:spinnerMode="dropdown"/>

  <TextView
      android:id="@+id/transaction_friend_dialog_amount_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/transaction_friend_picker_friend_spinner"
      android:layout_marginTop="@dimen/text_margin"
      android:labelFor="@+id/transaction_friend_dialog_amount_et"
      android:text="@string/pick_transaction_friend_dialog_amount"
      android:textAppearance="?android:attr/textAppearanceLarge"/>

  <EditText
      android:id="@+id/transaction_friend_dialog_amount_et"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/transaction_friend_picker_friend_spinner"
      android:layout_marginStart="@dimen/text_margin"
      android:layout_marginTop="@dimen/text_margin"
      android:layout_toEndOf="@+id/transaction_friend_dialog_amount_tv"
      android:ems="10"
      android:inputType="numberDecimal"/>
</RelativeLayout>
